<p id="notice"><%= notice %></p>

<%= form_with(url: '/employees', method: 'get', local: true) do %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<%= link_to "Advanced Search", new_search_path %>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Employee name</th>
      <th>Employee addresss</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Date of birth</th>
      <th>Employee image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.employee_id %></td>
        <td><%= employee.employee_name %></td>
        <td><%= employee.employee_addresss %></td>
        <td><%= employee.email %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.employee_image %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @post,renderer: BootstrapPagination::Rails %>
<br>
